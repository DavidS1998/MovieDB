<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="movies"
            type="aria.moviedb.database.Movies" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FirstFragment">

        <LinearLayout
            android:id="@+id/movieListLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/movie_1"
                layout="@layout/movie_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:movie="@{movies.movieList[0]}" />

            <include
                android:id="@+id/movie_2"
                layout="@layout/movie_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:movie="@{movies.movieList[1]}" />

            <include
                android:id="@+id/movie_3"
                layout="@layout/movie_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:movie="@{movies.movieList[2]}" />

            <include
                android:id="@+id/movie_4"
                layout="@layout/movie_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:movie="@{movies.movieList[3]}" />

            <include
                android:id="@+id/movie_5"
                layout="@layout/movie_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                bind:movie="@{movies.movieList[4]}" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>